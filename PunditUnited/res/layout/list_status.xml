<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView_statusProfilePic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:src="@drawable/com_facebook_profile_default_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_statusName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/UI_element_margin"
                    android:layout_marginRight="@dimen/UI_element_margin"
                    android:text="Lee Ting Zhe"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_statusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/UI_element_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="#669900"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/UI_element_margin"
                android:text="Placeholder"
                android:textColor="#6000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.08"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_statusTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:fontFamily="sans-serif-light"
                android:text="1h"
                android:textColor="#6000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_statusSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/UI_element_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/UI_element_margin"
        android:fontFamily="sans-serif-light"
        android:text="" />

    <TextView
        android:id="@+id/textView_statusComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/UI_element_margin"
        android:text="" />

</LinearLayout>