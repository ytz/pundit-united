<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearlayout_gw"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.01"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_gw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:fontFamily="sans-serif-light"
            android:text="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_historyHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView_historyHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="LIV"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_historyAway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView_historyAway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="STO"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_historyScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="3 : 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_historySelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAW" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_historyPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="+250" />
    </LinearLayout>

</LinearLayout>