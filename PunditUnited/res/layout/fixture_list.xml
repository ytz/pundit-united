<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/UI_element_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/UI_element_margin"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearlayout_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/UI_element_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/UI_element_margin"
        android:layout_weight="0.01"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="LIV"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="STO"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_HomeFixture"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:text="H"
            android:textAllCaps="true"
            android:textColor="#6000" />

        <TextView
            android:id="@+id/textView_homeOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="1.60"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/layout_DrawFixture"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:text="D"
            android:textAllCaps="true"
            android:textColor="#6000" />

        <TextView
            android:id="@+id/textView_drawOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="2.80"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/layout_AwayFixture"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:text="A"
            android:textAllCaps="true"
            android:textColor="#6000" />

        <TextView
            android:id="@+id/textView_awayOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/UI_element_margin"
            android:layout_marginTop="@dimen/UI_element_margin"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</LinearLayout>